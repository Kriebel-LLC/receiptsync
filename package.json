{
  "name": "starter",
  "version": "1.0.0",
  "repository": "https://github.com/AlecKriebel/starter.git",
  "author": "Alec Kriebel <me@aleckriebel.com>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web": "yarn workspace web dev",
    "web:build": "yarn workspace web build",
    "web:start": "yarn workspace web start",
    "web:lint": "yarn workspace web lint",
    "prepare": "husky install",
    "sync-packages": "npx syncpack fix-mismatches"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./check-production.sh && lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/": "tsc --noEmit"
  },
  "dependencies": {
    "next": "^14.2.4"
  }
}

{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "wrangler dev --test-scheduled --persist-to ../shared/.wrangler/state/",
    "deploy-staging": "./deploy.sh staging",
    "deploy": "./deploy.sh production",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "precommit": "yarn fix && tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.8",
    "json-logic-js": "^2.0.2",
    "nanoid": "^4.0.2",
    "shared": "*",
    "stripe": "^12.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "itty-router": "^3.0.12",
    "typescript": "^5.0.4",
    "wrangler": "^3.32.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

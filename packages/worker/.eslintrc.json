{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es2020": true,
    "worker": true
  },
  "rules": {
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["*.js"],
      "env": {
        "node": true
      }
    }
  ],
  "ignorePatterns": ["dist/", "node_modules/", "*.test.ts"]
}

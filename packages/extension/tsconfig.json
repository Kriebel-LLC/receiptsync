{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"]
        },
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/js",
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true
    },
    "extends": "../../tsconfig.json",
    "exclude": ["node_modules"]
}
